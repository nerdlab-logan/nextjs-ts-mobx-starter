{
  "presets": ["next/babel"],
  "plugins": [
    ["import", { "libraryName": "antd", "style": true }],
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "@": "./src",
        "@ui": "./src/components/ui",
        "@layout": "./src/components/layout",
        "@template": "./src/components/templates",
        "@core": "./src/core",
        "@util": "./src/utils",
        "@style": "./src/styles"
      }
    }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    [
      "emotion",
      {
        "autoLabel": true,
        "labelFormat": "[dirname]-[filename]--[local]"
      }
    ]
  ]
}
